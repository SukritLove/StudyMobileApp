<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    Title="Login Page"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TNI2013110040.LoginPage">
        <StackLayout Padding="40" BackgroundColor="PeachPuff">
            <Frame CornerRadius="30" BackgroundColor="Cornsilk" HasShadow="True">
              <StackLayout Padding="10">
                  <Image Source="manager.png"/>
                  <Entry Placeholder="UserName"/>
                  <Entry Placeholder="Password"/>
                  <Button Padding="5" CornerRadius="20" Text="Login" BackgroundColor="LightSalmon"/>

              </StackLayout>

            </Frame>


        </StackLayout>
</ContentPage>

